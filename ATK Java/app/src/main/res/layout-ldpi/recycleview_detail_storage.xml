<android.support.v7.widget.CardView app:cardCornerRadius="15dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:background="@drawable/card_edge_yellow">
            <TextView
                android:gravity="center"
                android:id="@+id/dsNamaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Binder Kecil A5"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/dsBarcode"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2002"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/dsPenginput"
                    android:layout_weight=".5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Meidah"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".4">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/dsLastUpdate"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14 Hours Ago"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Updated"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_weight="0.32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/dsHargaJual"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp25.000"
                    android:textStyle="bold"/>
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sell Price"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/dsStock"
                    android:textSize="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="30"
                    android:textStyle="bold" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stock"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>