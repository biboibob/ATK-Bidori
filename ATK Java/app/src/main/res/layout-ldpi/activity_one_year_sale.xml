<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="#4C44B3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navViewOneYearSale"
        app:menu="@menu/navdrawer_menu"
        app:headerLayout="@layout/header"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ECF16B"
            android:id="@+id/toolbarOneYearSale"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:layout_gravity="right"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/bidologo" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/card_edge_border_yelllow"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <TextView
                    android:id="@+id/totalRecordedOYS"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Recorded"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/card_edge_yellow_low_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView8"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView9"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@id/textView10"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView8"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView9"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATK"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView7"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peralatan"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView8"
                        app:layout_constraintStart_toStartOf="@+id/textView8"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olahraga"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView9"
                        app:layout_constraintStart_toStartOf="@+id/textView9"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pramuka"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView10"
                        app:layout_constraintStart_toStartOf="@+id/textView10"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView11"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView12" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView14"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView13"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView15"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView11"
                        app:layout_constraintTop_toBottomOf="@+id/textView17" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView18" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ulang Tahun"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView13"
                        app:layout_constraintStart_toStartOf="@+id/textView13"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mainan"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView11"
                        app:layout_constraintStart_toStartOf="@+id/textView11"
                        app:layout_constraintTop_toBottomOf="@+id/textView11" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aksesoris"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView14"
                        app:layout_constraintStart_toStartOf="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView14" />

                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ART"
                        android:textSize="10dp"
                        app:layout_constraintEnd_toEndOf="@+id/textView15"
                        app:layout_constraintStart_toStartOf="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/textView15" />


                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <HorizontalScrollView

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scrollbars="none"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/atk"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_atk"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/prl"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_peralatan"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/orl"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_olahraga"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/prm"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_pramuka"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/ult"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_ulangtaun"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/mnn"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_mainan"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/acc"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_aksesoris"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

                <FrameLayout
                    android:onClick="displayDataOYS"
                    android:id="@+id/art"
                    android:layout_marginLeft="2dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background">
                    <ImageView
                        android:tint="#4C44B3"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_storage_alatrumahtangga"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.SearchView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/card_white"/>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/recyclerViewOYS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scrollbars="none" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/noRecord"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/image_pre_load"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There's No Record."
                android:textColor="@color/mdtp_white"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dp"/>

        </LinearLayout>



    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
